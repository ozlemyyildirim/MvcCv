@model MvcCv.Models.Entity.Tbl_Egitimlerim
@{
    ViewBag.Title = "EgitimGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12 p-2">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Egitim Güncelleme Sayfası</h3>
                        </div>
                        <div class="card-body">
                            
                            <form method="post">
                                @Html.Label("Eğitim Id")
                                @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
                                <br />
                                @Html.Label("Başlık")
                                @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
                                <br />
                                @Html.Label("Alt Başlık1")
                                @Html.TextBoxFor(x => x.AltBaslik1, new { @class = "form-control" })
                                <br />
                                @Html.Label("Alt Başlık2")
                                @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control" })
                                <br />
                                @Html.Label("GNO")
                                @Html.TextBoxFor(x => x.GNO, new { @class = "form-control" })
                                <br />


                                @Html.Label("Tarih")
                                @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                                <br />
                                <button class="btn btn-info">Güncelle</button>
                                <br />
                            </form>


                        </div>
                    </div>


                </div>
            </div>

        </div>


    </section>
</body>
</html>