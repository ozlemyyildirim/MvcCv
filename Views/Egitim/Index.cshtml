@using MvcCv.Models.Entity
@model List<Tbl_Egitimlerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12 p-2">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Eğitim Listesi</h3>
                        </div>
                        <div class="card-body">
                            

                            <table class="table table-bordered">
                                <tr>
                                    <th>ID</th>
                                    <th>Başlık</th>
                                    <th>Alt Başlık1</th>
                                    <th>Alt Başlık2</th>
                                    <th>GNO</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Baslik</td>
                                        <td>@item.AltBaslik1</td>
                                        <td>@item.AltBaslik2</td>
                                        <td>@item.GNO</td>
                                        <td>@item.Tarih</td>
                                        <td><a href="/Egitim/EgitimSil/@item.ID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Egitim/EgitimGuncelle/@item.ID" class="btn btn-success">Düzenle</a></td>
                                    </tr>
                                }

                            </table>
                            <br />
                            <a href="/Egitim/EgitimEkle/" class="btn btn-primary">Yeni Eğitim Ekle</a>
                        </div>
                    </div>


                </div>
            </div>

        </div>


    </section>
</body>
</html>