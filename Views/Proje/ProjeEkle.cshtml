
@{
    ViewBag.Title = "ProjeEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12 p-2">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Proje Ekleme Sayfası</h3>
                        </div>
                        <div class="card-body">

                            <form method="post">

                                <input type="text" name="ProjeAdi" class="form-control" placeholder="ProjeAdini yazınız" />
                                <br />
                                <input type="text" name="ProjeDetayi" class="form-control" placeholder="ProjeDetayini yazınız" />
                                <br />
                               
                                <textarea rows="5" class="form-control" name="KullanilanTeknoloji" placeholder="Kullanilan Teknolojiyi yazınız "></textarea>
                                <br />
                                <input type="text" name="ProjeLinki" class="form-control" placeholder="ProjeLinki ni yazınız" />
                                <br />


                                <button class="btn btn-info">Kaydet</button>
                            </form>
                        </div>
                    </div>


                </div>
            </div>

        </div>


    </section>
</body>
</html>