@using MvcCv.Models.Entity
@model List<Tbl_Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12 p-2">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Admi İşlemleri</h3>
                        </div>
                        <div class="card-body">

                            <table class="table table-bordered">
                                <tr>
                                    
                                    <th>Kullanıcı Adı</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>


                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                 
                                        <td>@item.KullaniciAdi</td>
                                       
                                        <td><a href="/Admin/AdminDuzenle/@item.ID" class="btn btn-danger">Düzenle</a></td>
                                        <td><a href="/Admin/AdminSil/@item.ID" class="btn btn-success">Sil</a></td>
                                    </tr>
                                }

                            </table>
                            <br />
                            <a href="/Admin/AdminEkle/" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
                        </div>
                    </div>


                </div>
            </div>

        </div>


    </section>
</body>
</html>

