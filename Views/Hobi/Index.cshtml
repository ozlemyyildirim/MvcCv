@using MvcCv.Models.Entity
@model List<Tbl_Hobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12 p-2">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Hobi Düzenleme Sayfası</h3>
                        </div>
                        <div class="card-body">
                           
                            <form method="post">
                                @foreach (var item in Model)
                                {
                                    <label>Açıklama 1</label>
<textarea rows="5" class="form-control" name="Aciklama1">@item.Aciklama1</textarea>
                                    <label>Açıklama 2</label>
<textarea rows="5" class="form-control" name="Aciklama2">@item.Aciklama2</textarea>
                                }
                                <br />
                                <button class="btn btn-success">Güncelle</button>
                            </form>
                        </div>
                    </div>


                </div>
            </div>

        </div>


    </section>
</body>
</html>