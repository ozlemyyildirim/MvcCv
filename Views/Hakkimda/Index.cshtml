@using MvcCv.Models.Entity
@model List<Tbl_Hakkimda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12 p-2">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Hakkımda Düzenleme Sayfası</h3>
                        </div>
                        <div class="card-body">


                            <form method="post">
                                <div class="row col-md-8 m-2">
                                    @foreach (var item in Model)
                                    {
                                        <label>Ad</label>
                                        <input type="text" class="form-control" name="Ad" value="@item.Ad" />
                                        <br />
                                        <label>Soyad</label>
                                        <input type="text" class="form-control" name="Soyad" value="@item.Soyad" />
                                        <br />
                                        <label>Telefon</label>
                                        <input type="text" class="form-control" name="Telefon" value="@item.Telefon" />
                                        <br />
                                        <label>Mail</label>
                                        <input type="text" class="form-control" name="Mail" value="@item.Mail" />
                                        <br />
                                        <label>Adres</label>
                                        <input type="text" class="form-control" name="Adres" value="@item.Adres" />
                                        <br />
                                        <label>Aciklama</label>
                                        <textarea rows="5" class="form-control" name="Aciklama">@item.Aciklama</textarea>
                                        <br />
                                        <label>Resim</label>
                                        <input type="text" class="form-control" name="Resim" value="@item.Resim" />
                                        <br />

                                    }
                                    <br />
                                    <button class="btn btn-success">Güncelle</button>
                                </div>
                            </form>
                        </div>
                    </div>


                </div>
            </div>

        </div>


    </section>
</body>
</html>