
@{
    ViewBag.Title = "DeneyimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12 p-2">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Deneyim Ekleme Sayfası</h3>
                        </div>
                        <div class="card-body">
                          
                            <form method="post">

                                <input type="text" name="Baslik" class="form-control" placeholder="Başlığı yazınız" />
                                <br />
                                <input type="text" name="AltBaslik" class="form-control" placeholder="Alt Başlığı yazınız" />
                                <br />
                                <textarea placeholder="Açıklamanızı giriniz" name="Aciklama" class="form-control" rows="5"></textarea>
                                <br />
                                <input type="text" name="Tarih" class="form-control" placeholder="Çalışma Tarihi" />
                                <br />
                                <button class="btn btn-info">Kaydet</button>
                            </form>
                        </div>
                    </div>


                </div>
            </div>

        </div>


    </section>
</body>
</html>